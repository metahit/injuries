file = {:home/rob/papers/Feleke2017.pdf:pdf},
issn = {22141405},
journal = {Journal of Transport and Health},
keywords = {Active travel,Cycling,Deprivation,Driving,Perceived risk,Road traffic fatality,Walking},
number = {July},
pages = {0--1},
publisher = {Elsevier Ltd},
title = {{Comparative fatality risk for different travel modes by age, sex, and deprivation}},
