issn = {00014575},
journal = {Accident Analysis and Prevention},
keywords = {Co-existence of effects,Hazard-in-numbers,Safety-in-numbers,Statistical artefact},
pages = {57--63},
pmid = {24013112},
publisher = {Elsevier Ltd},
title = {{Can a safety-in-numbers effect and a hazard-in-numbers effect co-exist in the same data?}},
url = {http://dx.doi.org/10.1016/j.aap.2013.08.010},
volume = {60},
